@model DateTime?
@if (!Model.HasValue)
            {
                <input type="date" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"
                       name="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"/>
            }
else
            {
                <input type="date" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"
                                       name="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"
                                       value="@Model.Value.ToString("yyyy-MM-dd")"/>
            }


